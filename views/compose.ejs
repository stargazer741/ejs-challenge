<%- include("partials/header.ejs"); -%>

<h1>Compose</h1>
<form action="/compose" method="post">
  <div class="form-group">
    <label for="textInput">Title</label>
    <input
      class="form-control"
      type="text"
      name="composeTitle"
      id="composeTitle"
    />
    <label for="composeMessage">Post</label>
    <textarea
      class="form-control"
      name="composeMessage"
      id="composeMessage"
      cols="30"
      rows="10"
    ></textarea>
  </div>
  <button class="btn btn-primary" type="submit" name="btnPublish">
    Pusblish
  </button>
</form>

